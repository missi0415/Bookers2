   <h2>User info</h2>
   <div class="container">
      <div class='col-lg-4'>
      <table class='table'>
        <tr><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></tr>
        <tr>
          <th>name<th>
          <th><%= @book.user.name %><th>
        </tr>
        <tr>
          <th>introduction<th>
          <th><%= @book.user.introduction %><th>
        </tr>
      </table>
      <div>

        <!--カレントユーザーはログインしているユーザーのidを取得するよって意味-->
            <%= link_to edit_user_path(@book.user_id) do %>
              <div class="btn btn-outline-secondary btn-block fas fa-user-cog "></div>
            <% end %>

      </div>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book_new, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <p><%= f.text_field :title %></p>
      </div>
      <div class="form-group">
      <label for="book_opinion">Opinion</label>
        <p><%= f.text_area :body %></p>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
         <% end %>
      </div>

<h2>Book detail</h2>

  <div class='col-lg-8'>
  <table class='table table-hover table-inverse'>
    <thead>
    </thead>
  <tbody>
    <tr>
      <td>
      <%= link_to user_path(@book.user_id) do %>
