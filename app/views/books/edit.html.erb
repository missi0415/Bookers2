<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
 <%= form_with model:@book, local:true do |f| %>

  <div class="form-group">
    <label for="book_title">Title</label>
    <p><%= f.text_field :title %></p>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <p><%= f.text_area :body %></p>
  </div>
  <div class="form-group">
    <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" />
  </div>
</form>
  		<a><%= link_to "Show",book_path(@book) %></a> |
  		<a><%=link_to "Back",books_path %></a>
  </div>
</div>
<% end %>
